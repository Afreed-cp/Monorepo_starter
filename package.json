{
  "name": "theme-engine-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@lerna-lite/cli": "^3.10.0",
    "@lerna-lite/exec": "^3.10.0",
    "@lerna-lite/publish": "^3.10.0",
    "@lerna-lite/run": "^3.10.0",
    "@lerna-lite/version": "^3.10.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@storybook/addon-a11y": "^8.4.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@storybook/web-components": "^8.4.2",
    "@storybook/web-components-vite": "^8.4.2",
    "@types/mocha": "^10.0.9",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "plop": "^4.0.1",
    "postcss-advanced-variables": "^5.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-color-function": "^4.1.0",
    "postcss-jsx": "^0.36.4",
    "postcss-preset-env": "^10.1.0",
    "postcss-url": "^10.1.3",
    "postcss-values-parser": "^6.0.2",
    "prettier": "^3.3.3",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-import-css": "^3.5.6",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.4.2",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "web-component-analyzer": "^2.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "npm run clean && npm run storybook",
    "build": "lerna run --scope @theme-engine-ui/css build && turbo run build",
    "serve": "vite preview",
    "clean": "turbo run clean --parallel",
    "new-package": "plop && npm i",
    "lerna:version": "lerna version --sync-workspace-lock",
    "build:prod": "npm run clean && npm run build",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna run --scope @theme-engine-ui/css clean && lerna run --scope @theme-engine-ui/css build && node ./scripts/generate-ts-config.js",
    "storybook": "npm run bootstrap && npm run storybook:analyze && storybook dev -p 6006",
    "storybook:build": "npm run bootstrap && npm run storybook:analyze && storybook build",
    "storybook:analyze": "web-component-analyzer **/*.element.ts --outFile custom-elements.json"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.element.ts": "tsc-files --project tsconfig.lint-staged.json",
    "*": "prettier --ignore-unknown --write"
  },
  "packageManager": "npm@10.7.0"
}
